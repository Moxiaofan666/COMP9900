</head>

<body>
    <%include header.ejs%>



    <div class="head-bread">
      <div class="container">
        <ol class="breadcrumb">
          <li><a href="/index">Home</a></li>
          <li class="active">CART</li>


          uid: (testing well be hidden)<p id="uid"><%=uid%></p>
        </ol>
      </div>
    </div>

   <!--cart 展示区-->
    <div class="check">
      <div class="container">
        <div class="col-md-9 cart-items">

          <h1 id="totalItemsNum">My Shopping Bag (<%=JSON.parse(JSON.stringify(result)).length%>)</h1>



          <!--<script>-->
              <!--$(document).ready(function(c) {-->
                  <!--$('.remove2').on('click', function(c) {-->
                      <!--$('.cart-header2').fadeOut('slow', function(c) {-->
                          <!--$('.cart-header2').remove();-->
                      <!--});-->
                  <!--});-->
              <!--});-->
          <!--</script>-->


<!--循环输出cart 内容-->

          <%
            var totalMoney = 0;

            for (var i=0 ; i<JSON.parse(JSON.stringify(result)).length; i++){
                console.log(JSON.parse(JSON.stringify(result))[0]);
                var each = JSON.parse(JSON.stringify(result))[i];
                totalMoney = totalMoney + parseInt(each.productPrice) * parseInt(each.number);
                console.log("each.pid=");
                console.log(each.pid);
          %>

          <div class="cart-header<%=i%>">

            <div class="cart-sec simpleCart_shelfItem">
              <div class="cart-item cyc">
                <a href="/single/showproduct?pid=<%=each.pid%>"><img src="<%=each.imgPath%>" class="img-responsive" alt="" /></a>
              </div>

              <div class="cart-item-info">
                <h3><%=each.productName%></h3>
                <p hidden id="pid<%=i%>"><%=each.pid%></p>
              </div>
              <div  class="remove<%=i%>" onclick="removeFromCart(<%=i%>)" style="cursor:pointer">
                <p class="pull-right"><span class="glyphicon glyphicon-remove"></span></p>
              </div>

              <div class="cart-item-info">
                <ul class="qty">
                  <li>
                    <p>Qty : <%=each.number%></p>
                  </li>
                  <li>
                    <p>Price each : <span class="glyphicon glyphicon-usd"></span><%=each.productPrice%></p>
                  </li>
                </ul>
              </div>
              <div class="clearfix"></div>

            </div>
          </div>

          <%
          }
          %>
        </div>
      </div>
    </div>


  <!-- check-out -->
  <div class="check">
    <div class="container">
      <div class="col-md-12 cart-total">
        <!--<a class="continue" href="#">Continue to basket</a>-->
        <div class="price-details">
          <h3>Total Details</h3>
          <div class="clearfix"></div>
        </div>
        <hr class="featurette-divider">
        <ul class="total_price">
          <li class="last_price">
            <h4>TOTAL</h4></li>
          <li class="last_price"><span class="glyphicon glyphicon-usd"></span><text><%=totalMoney%></text></li>
          <div class="clearfix"> </div>
        </ul>
        <div class="clearfix"></div>
        <%
        if (totalMoney>0){

        %>
        <a class="order" onclick="placeorder_POST(<%=JSON.stringify(result)%>)">Place Order</a>
        <%
        }
        %>


      </div>
    </div>
  </div>

    <!--5. foot start -->
    <%include footer.ejs%>
</body>

